{
    "name": "remote-explorer",
    "displayName": "remote explorer",
    "description": "",
    "version": "0.0.1",
    "publisher": "yonderxiao",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:remoteExplorer"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "remoteExplorer",
                    "name": "remote explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "remoteExplorer.openResource",
                "title": "Open Remote Resource"
            },
            {
                "command": "remoteExplorer.setAsRoot",
                "title": "Set As Root"
            },
            {
                "command": "remoteExplorer.resetRoot",
                "title": "Reset Root",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "remoteExplorer.resetRoot",
                    "when": "view == remoteExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "remoteExplorer.setAsRoot",
                    "when": "view == remoteExplorer && viewItem == directory"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}